#------------------------------------------------------------------------------
# Makefile for main.exe
# Y. Liow
#------------------------------------------------------------------------------
# Macros
#------------------------------------------------------------------------------
CXX 	= g++
CXXFLAGS = -g -Wall
LINK 	= g++
LINKFLAGS = -lGL -lGLU -lglut -lGLEW
OBJS 	= mygllib3d/config.o mygllib3d/reshape.o mygllib3d/SingletonView.o \
	  mygllib3d/Keyboard.o main.o vec4f.o
EXE	= main.exe

#------------------------------------------------------------------------------
# Executable
#------------------------------------------------------------------------------
$(EXE):	$(OBJS)
	$(LINK) $(OBJS) -o $(EXE) $(LINKFLAGS)

#------------------------------------------------------------------------------
# Object files
#------------------------------------------------------------------------------
main.o:	main.cpp
	$(CXX) $(CXXFLAGS) main.cpp -c -o main.o 
vec.o:	vec4f.cpp
	$(CXX) $(CXXFLAGS) vec4f.cpp -c -o vec4f.o
#------------------------------------------------------------------------------
# Utilities
#------------------------------------------------------------------------------
clean: 
	rm -f $(EXE) main.o vec4f.o
c: 
	rm -f $(EXE) main.o vec4f.o
run:
	./$(EXE)
r:
	./$(EXE)
